<h1 class="text-3xl font-bold mb-8">Webhook Events</h1>

<div class="bg-white rounded-lg shadow p-4 mb-6">
  <%= form_with url: admin_webhook_events_path, method: :get, class: "flex gap-4 flex-wrap" do |f| %>
    <%= f.select :provider, 
        options_for_select([['All Providers', ''], ['Stripe', 'stripe'], ['Vapi', 'vapi'], ['Twilio', 'twilio']], params[:provider]),
        {}, class: "rounded border-gray-300" %>
    
    <%= f.select :status,
        options_for_select([['All Statuses', ''], ['Pending', 'pending'], ['Processing', 'processing'], ['Completed', 'completed'], ['Failed', 'failed']], params[:status]),
        {}, class: "rounded border-gray-300" %>
    
    <%= f.text_field :search, placeholder: "Search event ID...", value: params[:search], class: "rounded border-gray-300 px-2 py-1" %>
    
    <%= f.submit "Filter", class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
    <%= link_to "Reset", admin_webhook_events_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300" %>
  <% end %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event Type</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Event ID</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created At</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @webhook_events.each do |event| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= event.provider %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= event.event_type %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= truncate(event.event_id, length: 20) %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= case event.status
              when 'completed' then 'bg-green-100 text-green-800'
              when 'failed' then 'bg-red-100 text-red-800'
              when 'processing' then 'bg-blue-100 text-blue-800'
              else 'bg-gray-100 text-gray-800'
            end %>">
              <%= event.status %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= event.created_at.strftime('%Y-%m-%d %H:%M') %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
            <%= link_to "View", admin_webhook_event_path(event), class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

