<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-4">
  <div class="max-w-md w-full">
    <%= render Primitives::CardComponent.new(class: "shadow-xl") do |card| %>
      <% card.with_title do %>
        <h1 class="text-3xl font-bold text-center text-gray-900">Try Beaker AI</h1>
      <% end %>
      
      <% card.with_description do %>
        <p class="text-center text-gray-600">Call hot leads in 60 seconds, not 60 minutes</p>
      <% end %>
      
      <%= form_with url: signups_path, method: :post, local: true, class: "space-y-4" do |form| %>
        <%= render Primitives::InputComponent.new(
          name: "email",
          type: "email",
          label: "Email Address",
          placeholder: "your@email.com",
          required: true
        ) %>
        
        <div class="flex items-start space-x-2">
          <%= check_box_tag :marketing_consent, "1", false, 
              class: "mt-1 rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
          <%= label_tag :marketing_consent, 
              "Send me updates about Beaker AI", 
              class: "text-sm text-gray-600 leading-relaxed" %>
        </div>
        
        <%= render Primitives::ButtonComponent.new(
          type: "submit",
          variant: :default,
          size: :lg,
          class: "w-full"
        ) do %>
          Start Free Trial
        <% end %>
      <% end %>
      
      <% card.with_footer do %>
        <p class="text-xs text-gray-500 text-center">
          By signing up, you agree to our terms of service and privacy policy.
        </p>
      <% end %>
    <% end %>
  </div>
</div>
