<%= render Primitives::CardComponent.new(class: "mb-4") do |card| %>
  <% card.with_header do %>
    <div class="flex items-center justify-between">
      <h3 class="text-lg font-semibold">Call Summary</h3>
      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium <%= badge_classes %>">
        <%= intent_label %>
      </span>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- CAPTURED LEAD DATA FIRST (Priority) -->
    <% if has_captured_data? %>
      <div class="space-y-3">
        <h4 class="text-sm font-semibold text-foreground">Captured Information</h4>
        <dl class="space-y-2">
          <% captured_fields.each do |label, value| %>
            <div class="flex flex-col sm:flex-row sm:justify-between py-2 border-b border-border last:border-b-0">
              <dt class="text-sm font-medium text-muted-foreground mb-1 sm:mb-0"><%= label %></dt>
              <dd class="text-sm text-foreground font-medium"><%= value %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    <% else %>
      <div class="text-sm text-muted-foreground p-3 bg-muted/50 rounded-md">
        No lead information captured during this call.
      </div>
    <% end %>

    <!-- CALL METADATA -->
    <div class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <p class="text-muted-foreground">Duration</p>
        <p class="font-medium text-foreground"><%= formatted_duration %></p>
      </div>
      <div>
        <p class="text-muted-foreground">Time</p>
        <p class="font-medium text-foreground"><%= formatted_timestamp %></p>
      </div>
    </div>

    <!-- RECORDING PLAYER PLACEHOLDER (T007 will implement AudioPlayer) -->
    <% if has_recording? %>
      <div class="space-y-2">
        <h4 class="text-sm font-semibold text-foreground">Recording</h4>
        <div class="p-4 bg-muted/50 border border-border rounded-md text-center">
          <p class="text-sm text-muted-foreground">
            Audio player will be implemented in R1-E03-T007
          </p>
          <p class="text-xs text-muted-foreground mt-1">
            <a href="<%= call_record.recording_url %>" target="_blank" class="underline hover:text-foreground">
              Listen in new tab
            </a>
          </p>
        </div>
      </div>
    <% end %>

    <!-- TRANSCRIPT (Expandable on mobile) -->
    <% if has_transcript? %>
      <div class="space-y-2">
        <h4 class="text-sm font-semibold text-foreground">Transcript</h4>
        <details class="group" open>
          <summary class="cursor-pointer text-xs text-primary hover:underline list-none">
            <span class="group-open:hidden">Show transcript</span>
            <span class="hidden group-open:inline">Hide transcript</span>
          </summary>
          <div class="mt-3 p-3 bg-muted/50 rounded-md text-sm text-foreground whitespace-pre-wrap break-words max-h-64 overflow-y-auto">
            <%= call_record.transcript %>
          </div>
        </details>
      </div>
    <% end %>
  </div>
<% end %>

